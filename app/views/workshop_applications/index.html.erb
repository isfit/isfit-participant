<div class="padding-workshop">
<h1> Workshop Applications </h1>
<table class ="table">
	<thead>
		<tr> 
			<th>Full name</th>
			<th>Citizenship</th>
			<th>Profile grade</th>
      <th>Workshop grade</th>
		</tr>
	</thead>

<ol class="breadcrumb">
  <li><%= link_to 'Dashboard', dashboard_path %></li>
  <li class="active">Workshop applications</li>
</ol>

<h1> Workshop Applications </h1>
<table class ="table">
	<thead>
		<tr> 
			<th>Full name</th>
			<th>Citizenship</th>
		</tr>
	</thead>

	<% @workshop_applications.each do |workshop_application| %>
	<tr>
		<td><%= link_to workshop_application.user.full_name, workshop_application %></td>
		<td><%= workshop_application.profile.citizenship.name%></td>
    
    <% if workshop_application.profile_grade.blank? and workshop_application.workshop_application_grade.blank? %>
      <td>-/10</td>
      <td>-/10</td>

    <%else%>
		  <td><span class="<%= whichColor(workshop_application.profile_grade)%>">
		  <%= workshop_application.profile_grade %></span>/10</td>
      
      <td><span class="<%= whichColor(workshop_application.workshop_application_grade)%>">
      <%= workshop_application.workshop_application_grade %></span>/10</td>
      <%end%>
	</tr>
	<%end%>

	<% if @workshop_applications.blank? %>
		<tr>
			<td colspan="2">Workshops application is empty</td>
		</tr>
	<%end%>

	

</table>

<%= will_paginate(@workshop_applications, renderer: BootstrapPagination::Rails) %>
