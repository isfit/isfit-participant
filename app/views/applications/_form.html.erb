<%= simple_form_for(@application, :html => { :class => "form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, :input_html => { :class => "span4" } %>
    <%= f.input :last_name, :input_html => { :class => "span4" } %>
    <%= f.input :address, :input_html => { :class => "span4" } %>
    <%= f.input :zipcode, :input_html => { :class => "span4" } %>
    <%= f.input :city, :input_html => { :class => "span4" } %>
    <%= f.input :country_id, :collection => @countries, :as => :select, 
      :input_html => { :class => "span4" } %>
    <%= f.input :phone, :input_html => { :class => "span4" } %>
    <%= f.input :email, :input_html => { :class => "span4" } %>
    <%= f.input :birthdate, :as => :date, :start_year => Date.today.year - 100,
      :end_year => Date.today.year - 17, :order =>  [:year, :month, :day], 
      :input_html => { :class => "span2" } %>
    <%= f.input :sex, :as => :radio_buttons, 
      :collection => [["female", "f"], ["male", "m"]]  %>
    <%= f.input :university, :input_html => { :class => "span4" } %>
    <%= f.input :field_of_study, :input_html => { :class => "span4" } %>
    <%= f.input :workshop1, :collection => @workshops, :as => :select, 
      :input_html => { :class => "span4" } %>
    <%= f.input :workshop2, :collection => @workshops, :as => :select, 
      :input_html => { :class => "span4" } %>
    <%= f.input :workshop3, :collection => @workshops, :as => :select, 
      :input_html => { :class => "span4" } %>
    <%= f.input :essay1, :input_html => { :class => "span4", :rows => 10 } %>
    <%= f.input :essay2, :input_html => { :class => "span4", :rows => 10 } %>
    <%= f.input :travel_apply, :as => :boolean, :label => "Applied for travel support?" %>
    <%= f.input :travel_essay, :input_html => { :class => "span4", :rows => 10 } %>
    <%= f.input :travel_amount, :input_html => { :class => "span4" } %>
    <%= f.input :travel_nosupport_other, :as => :boolean, :label => "Other travel support?" %>
    <%= f.input :travel_nosupport_cancome, :as => :boolean, :label => "Can still attend?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
