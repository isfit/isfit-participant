<h1>Duplicates for <%= @duplicate.first_name %> <%= @duplicate.last_name %></h1>
<p>These are the duplicate application for a single person, based on first name and last name matching.</p>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
     <th>First name</th>
     <th>Last name</th>
     <th></th>
    <tr>
  </thead>
<% @duplicates.each do |duplicate| %>
  <tr>
    <td><%= duplicate.id %></td>
    <td><%= duplicate.first_name %></td>
    <td><%= duplicate.last_name %></td>
    <td>
      <%= link_to "Show", application_path(duplicate.id), class: "btn btn-default" %>
      <%= link_to "Destroy", application_path(duplicate.id), class: "btn btn-danger", method: :delete, confirm: 'Are you sure you want to delete this applicant?' %>
    </td>
  </tr>
<% end %>
</table>
