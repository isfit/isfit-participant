<%= simple_form_for @profile, url: user_profile_path(current_user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :address %>
    <%= f.input :postal_code %>
    <%= f.input :city %>
    <%= f.input :nationality %>
    <%= f.input :citizenship %>
    <%= f.input :country, as: :string %>
    <%= f.input :calling_code %>
    <%= f.input :phone %>
    <%= f.input :date_of_birth %>
    <%= f.input :gender %>
    <%= f.input :gender_specify %>
    <%= f.input :school %>
    <%= f.input :field_of_study %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
