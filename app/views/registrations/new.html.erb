<h1>Apply for ISFiT</h1>

<p>Start the application process by creating an account.</p>

<%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
    <% if resource.errors.full_messages.any? %>
      <div class="bg-danger info-box">
        <h2><%= pluralize(resource.errors.full_messages.count, 'error') %> prevents you from creating an account</h2>

        <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: 'Your first name', :autofocus => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: 'Your last name', class: 'form-control' %>
    </div>

    <p>Names must be a they appear in your passport.</p>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'Your e-mail', class: 'form-control' %>
    </div>

    <div class="form-group">
      <p>
        <%= f.label :email_confirmation %>
        <%= f.email_field :email_confirmation, placeholder: 'Repeat the e-mail', class: 'form-control' %>
      </p>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Select a password', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: 'Repeat the password', class: 'form-control' %>
    </div>

    <p>Want a strong password? We recommend you to use minimum four random words. Easy to remember, hard for computers to guess.</p>

    <div><%= f.submit 'Create account', class: 'btn btn-success btn-lg' %></div>
<% end %>

<%= render 'devise/shared/links' %>