<% content_for :sidebar_left do %>
  <h6 class="vlist">Navigation</h6>
  <ul class="vlist">
  <% @categories.each do |c| %>
    <li><%=image_tag('icons/folder.png') + ' ' + c.title %></li>
    <ul>
      <% c.information_pages.each do |i| %>
        <li><%= link_to image_tag('icons/report.png') + ' ' + i.title, information_page_path(i) %></li>
      <%end%>
    </ul>
  <%end%>
</ul>
<% end %>

<h1><%= @information_page.title %></h1>
<p>
  <%= raw format(@information_page.content) %>
</p>

<p class="info">
Posted by <%= @information_page.user.name %> <%= time_ago_in_words(@information_page.created_at) %> ago.
</p>
