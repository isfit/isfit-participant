<%= render 'menu_form' %>

<%= simple_form_for(@information_page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :information_category_id,
                as: :select,
                input_html: { class: "col-md-6" },
                collection: InformationCategory.all.to_select_title,
                default: :first
    %>
    <%= f.input :title, input_html: { class: "col-md-6" } %>
    <%= f.input :content, input_html: { rows: 10, class: "col-md-6" } %>
  </div>

  <%= render 'information' %>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
