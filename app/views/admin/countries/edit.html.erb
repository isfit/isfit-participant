<h1>Edit <%= @country.name %></h1>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @country.name %></dd>

  <dt>Code</dt>
  <dd><%= @country.code %>
</dl>

<%= form_for [:admin, @country], html: {class: 'form-horizontal'} do |c| %>
  <div class="form-group">
    <%= c.label :user_id, 'Responsible functionary', class: 'col-sm-3 control-label' %>

    <div class="col-sm-9">
      <%= c.collection_select :user_id, User.where("role LIKE 'admin' OR role = 'functionary-participant'").order('first_name ASC', 'last_name ASC'), :id, :full_name, {prompt: 'Please select responsible functionary'}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= c.submit nil, class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
