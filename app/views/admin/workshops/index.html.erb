<div class="pull-right">
  <%= link_to 'New Workshop', new_admin_workshop_path, :class => "btn btn-primary"%>
</div>
<h1>workshops</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
              <th>Title</th>
              <th>Lead</th>
            <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <% @workshops.each do |workshop| %>
    <tr>
              <td><%= workshop.title %></td>
              <td><%= workshop.lead %></td>
            <td><%= link_to 'Show', [:admin, workshop], :class => "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_admin_workshop_path(workshop), :class => "btn" %></td>
      <td><%= link_to 'Destroy', [:admin, workshop], confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>

