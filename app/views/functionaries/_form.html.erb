<%= form_for(@functionary,:html => {:class => "yform columnar"} ) do |f| %>
  <% if @functionary.errors.any? %>
    <div id="error_explanation" class="warning">
      <h2><%= pluralize(@functionary.errors.count, "error") %> prohibited this functionary from being saved:</h2>

      <ul>
        <% @functionary.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="type-text">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="type-text">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="type-text">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div clas="type-text">
    <%= f.label :participants %>
    <i>Hold in ctrl and click on the participants you want <br />to add/remove from the functionary<br />Participants with *** around them have no functionary</i>
    <%= select_tag(:participant, options_for_select(@participants, @selected_participants), {:multiple => true, :size => @participants.size} )%>
  </div>
  <div class="type-button">
    <%= f.submit :class => "submit" %>
  </div>
<% end %>
