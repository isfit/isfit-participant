<%= content_for :sidebar_right do %>
  <%= render "information" %>
<% end %>

<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <legend>Meta</legend>
      <%= f.input :sticky, as: :boolean %>
      <%= f.input :publish_at, method: :getlocal, input_html: {:style => "width: 7em"} %>
    </fieldset>
    <fieldeset>
      <legend>Public information</legend>
      <%= f.input :title, input_html: {:class => "col-md-5"} %>
      <%= f.input :content, input_html: {:class => "col-md-5", rows: 10} %>
    </fieldset>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>

<h2>Formatting</h2>
<%= render :partial => "partials/formatting" %>
