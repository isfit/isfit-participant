<% content_for :sidebar_left do %>
  <h6 class="vlist"><%= image_tag('icons/wrench.png') %> Navigation</h6>
  <ul class="vlist">
    <li><%= link_to image_tag('icons/page_white_stack.png') + ' Show all workshops', workshops_path %></li>
    <li><%= link_to image_tag('icons/cancel.png') + ' Discard changes', @workshop %></li>
  </ul>
<% end %>
<h1>Editing Workshop <%= @workshop.id %>: <%= @workshop.name %></h1>
<%= form_for(@workshop, :html => { :class => "yform full"}) do |f| %>
  <% if @workshop.errors.any? %>
    <div id="error_explanation" class="warning">
      <h2><%= pluralize(@workshop.errors.count, "error") %> prohibited this information_page from being saved:</h2>

      <ul>
        <% @workshop.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="type-text">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="type-text">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="type-button">
    <%= f.submit :class => "submit" %>
  </div>
<% end %>
