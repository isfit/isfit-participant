<h1>Workshop participants</h1>
<p>The participants in the workshop is listed below.</p>

<% content_for :sidebar_left do %>
  <%= render 'menu' %>
<% end %>

<table class="table table-bordered table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th>Country</th>
      <% if can? :show, Participant %>
        <th>Show</th>
      <% end %>
      <% if can? :update_workshop, Participant %>
        <th>Change workshop</th>
      <% end %>
    </tr>
  </thead>

  <% @participants.each do |participant| %>
    <tr>
      <td><%= "#{participant.first_name} #{participant.last_name}" %></td>
      <td><%= participant.sex ? "Male" : "Female" %></td>
      <td><%= participant.country.name %></td>
      <% if can? :show, Participant %>
        <td><%= link_to 'Show', participant_path(participant.id), class: "btn btn-primary" %></td>
      <% end %>
      <% if can? :update_workshop, Participant %>
        <td><%= link_to 'Change workshop', show_workshop_participant_path(participant.id), class: "btn" %></td>
      <% end %>
    </tr>
  <% end %>

</table>
