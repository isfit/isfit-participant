<% content_for :sidebar_right do%>
<p class="info">This page can only be viewed by functionaries and administrators. Only administrators can edit workshop info. Please contact an administrator if you find any mistakes in the workshop-pages</p>
<% end %>
<table class="full">
  <tr>
    <th>Workshop</th>
    <th></th>
    <th></th>
<% @workshops.each do |workshop| %>
  <tr>
    <td><%= "Workshop #{workshop.id}: #{workshop.name}" %></td>
    <td><%= link_to image_tag('icons/page_go.png'), workshop %></td>
    <td><%= link_to image_tag('icons/page_edit.png'), edit_workshop_path(workshop)%></td>
  </tr>
<% end %>
</table>
