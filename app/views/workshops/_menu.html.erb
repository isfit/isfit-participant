<% content_for :sidebar_left do %>
<ul class="nav nav-list well">
  <li class="nav-header">Menu</li>
  <% if can? :index, Workshop %>
    <li><%= link_to image_tag('icons/page_white_stack.png') + ' Show all workshops', workshops_path %></li>
  <% end %>
  <% if current_user.is_participant? and not current_user.participant.workshop.nil? %>
    <li><%= link_to image_tag('icons/arrow_right.png') + ' Workshop', workshop_path(current_user.participant.workshop) %></li>
  <% end %>
  <% if can?( :participants, Workshop) and @workshop %>
    <li><%= link_to image_tag('icons/group.png') + ' Participants', participants_workshop_path(@workshop.id) %></li>
  <% end %>
</ul>
<% end %>
