<h1>Sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Enter username', autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Enter password', autocomplete: 'off', class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div class="btn-group">
      <%= f.submit 'Login', class: 'btn btn-success' %>
      <%= link_to 'Register an account', new_user_registration_path, class: 'btn btn-info' %>
      <%= link_to 'Forgot your password?', new_user_password_path, class: 'btn btn-info' %>
    </div>
<% end %>