<%= render 'settings/sidebar_left' %>

<h1>User</h1>

<p>Edit the essential settings for your user.</p>

<%= form_for [:settings, @user], url: settings_edit_user_path do |user| %>
<div class="form-group">
  <%= user.label :first_name %>
  <%= user.text_field :first_name, placeholder: 'First name', class: 'form-control' %>
</div>

<div class="form-group">
  <%= user.label :last_name %>
  <%= user.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
</div>

<div class="form-group">
  <%= user.label :email %>
  <%= user.email_field :email, placeholder: 'Your e-mail', class: 'form-control' %>
</div>

<div class="form-group">
  <%= user.submit 'Save changes', class: 'btn btn-success'%>
</div>
<% end %>