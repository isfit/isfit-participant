<% content_for :sidebar_left do %>
  <%= render 'dashboard/sidebar/participant' %>
<% end %>

<h1>Confirm visa</h1>

<p>Please enter your visa number when you have been granted a visa to Norway. The visa number is in the upper right corner of visa.</p>

<% if @participant.errors.full_messages.any? %>
<div class="bg-danger info-box">
  <h2><%= pluralize(@participant.errors.full_messages.count, 'error') %> prevents you from confirming your visa</h2>

  <ul>
    <% @participant.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @participant, url: deadlines_confirm_visa_path do |f| %>
  <div class="form-group">
    <%= f.label :visa_number %>
    <%= f.text_field :visa_number, class: 'form-control' %>
  </div>

  <%= f.submit 'Confirm visa', class: 'btn btn-primary' %>
<% end %>