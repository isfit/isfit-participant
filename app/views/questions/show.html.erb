<p>
<b>Subject:</b><br/>
<%= @question.subject %>
</p>

<p>
<b>Content:</b><br/>
<%= @question.content %>
</p>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
<p>

<%= form_for([@question, @question.answers.build], :html => {:class => "yform columnar"}) do |f| %>
  <div class="type-text">
    <%= f.label :answer %><br />
    <%= f.text_area :content %>
  </div>
  <div class="type-button">
    <%= f.submit :class => "submit", :value=>"Add message" %>
  </div>
<% end %>
<br />
<% if @question.questions != []%>
<b>There are <%= @question.questions.size %> follow up questions<b>
<table>
  <tr>
    <th>
      Subject
    </th>
    <th>
      Date
    </th>
  </tr>
<% @question.questions.each do |q| %>
  <tr>
    <td>
      <%= q.subject %>
    </td>
    <td>
      <%= q.created_at %>
    </td>
  </tr>
<% end %>
<table>
<% end %>
<b>Answers:</b>
<% @answers.each do |answer|%> 
  <p><%=answer.content%>
<%end%>
<%= link_to 'Follow up question', :controller=>:questions, :action=>:follow_new, :id => @question.id  %>
</p>
