<p>
<b>Subject:</b><br/>
<%= @question.subject %>
</p>

<p>
<b>Content:</b><br/>
<%= @question.content %>
</p>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
<p>

<%= form_for([@question, @question.answers.build], :html => {:class => "yform columnar"}) do |f| %>
  <div class="type-text">
    <%= f.label :answer %><br />
    <%= f.text_area :content %>
  </div>
  <div class="type-button">
    <%= f.submit :class => "submit", :value=>"Add message" %>
  </div>
<% end %>
<br />
<b>Answers:</b>
<% @answers.each do |answer|%> 
  <p><%=answer.content%>
<%end%>
</p>
