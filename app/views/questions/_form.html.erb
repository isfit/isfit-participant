<%= form_for @question do |q| %>
  <div class="form-group">
    <%= q.label :subject %>
    <%= q.text_field :subject, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= q.label :content %>
    <%= q.text_area :content, rows: 8, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= q.submit nil, class: 'btn btn-success' %>
  </div>
<% end %>
